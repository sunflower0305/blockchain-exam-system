# Django 后端环境变量

# Django
DJANGO_SECRET_KEY=your-super-secret-key-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DB_NAME=exam_system
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
