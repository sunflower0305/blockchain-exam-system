# =====================================================
# 区块链考试系统 - 环境变量配置
# =====================================================

# Django 配置
DJANGO_SECRET_KEY=your-secret-key-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# 数据库配置
DB_NAME=exam_system
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Redis 配置
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =====================================================
# IPFS 配置
# =====================================================
IPFS_HOST=127.0.0.1
IPFS_PORT=5001
# 设置为 True 使用模拟模式（开发测试），False 连接真实 IPFS 节点
IPFS_USE_MOCK=False

# =====================================================
# Hyperledger Fabric 配置
# =====================================================
# 设置为 True 使用模拟模式（开发测试），False 连接真实 Fabric 网络
FABRIC_USE_MOCK=True

# Fabric 网络配置
FABRIC_CHANNEL=examchannel
FABRIC_CHAINCODE=exam-chaincode
FABRIC_MSP_ID=Org1MSP
FABRIC_PEER_ENDPOINT=localhost:7051

# Fabric 连接配置文件路径（生产环境）
FABRIC_CONNECTION_PROFILE=/app/fabric/config/connection-profile.json
FABRIC_USER_CERT=/app/fabric/organizations/peerOrganizations/org1.exam.com/users/Admin@org1.exam.com/msp/signcerts/Admin@org1.exam.com-cert.pem
FABRIC_USER_KEY=/app/fabric/organizations/peerOrganizations/org1.exam.com/users/Admin@org1.exam.com/msp/keystore/priv_sk

# =====================================================
# 前端配置
# =====================================================
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
